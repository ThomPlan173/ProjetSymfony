{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Articles</h1>
	<a class="addArticle" href="{{ path('blog_new') }}">
		Create New</a>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Content</th>
				<th>Create_at</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.id }}</td>
					<td>{{ article.titre }}</td>
					<td>{{ article.content }}</td>
					<td>{{ article.createAt ? article.createAt|date('Y-m-d') : '' }}</td>

					<td>
						<a href="{{ path('blog_show', {'id': article.id}) }}">View</a>
						<a href="{{ path('blog_edit', {'id': article.id}) }}">Edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
